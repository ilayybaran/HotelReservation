@* Bu satır, View'a bir "Room" listesi geleceğini belirtir *@
@model IEnumerable<HotelReservation.Models.Room>
@using Microsoft.AspNetCore.Mvc.Localization
@inject HotelReservation.Services.ICurrencyService CurrencyService
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["PageTitle"];
}

<div class="container">
    <div class="text-center mb-4">
        <h1>@Localizer["RoomTag"]</h1>
        <p class="lead">@Localizer["WelcomeSub"]</p>
    </div>

    <div class="row">
        @* Eğer veritabanından hiç oda gelmezse, bir uyarı mesajı göster *@
        @if (!Model.Any())
        {
            <div class="col">
                <div class="alert alert-warning" role="alert">
                    Şu anda gösterilecek uygun oda bulunmamaktadır.
                </div>
            </div>
        }
        else
        {
            @* Model'deki her bir 'room' için bir kart oluştur *@
            @foreach (var room in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <img src="@room.ImageUrl" class="card-img-top" alt="@room.RoomType">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@room.RoomType</h5>
                            <p class="card-text">@room.Description</p>
                            <ul class="list-group list-group-flush mt-auto">
                                <li class="list-group-item">@Localizer["CapacityFormatString", room.Capacity]</li>
                                 @{
                            // 1. O anki para birimini cookie'den oku (varsayılan TRY)
                            var targetCurrency = Context.Request.Cookies["UserCurrency"] ?? "TRY";

                            // 2. Fiyatı CurrencyService kullanarak dönüştür
                            var convertedPrice = await CurrencyService.ConvertFromTRYAsync(room.PricePerNight, targetCurrency);

                            // 3. Fiyatı, hedef para birimine uygun kültürle (formatla)
                            var targetCulture = CurrencyService.GetCultureInfoForCurrency(targetCurrency);
                        }
                                 <li class="list-group list-group-flush mt-auto">
                               <span class="fs-5 fw-bold text-success">@convertedPrice.ToString("C", targetCulture)</span>
                            </li>
                            </ul>
                            <div class="mt-3">
                                <a asp-controller="Rooms" asp-action="Details" asp-route-id="@room.Id" class="btn btn-secondary w-100">@Localizer["DetailButton"]</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>