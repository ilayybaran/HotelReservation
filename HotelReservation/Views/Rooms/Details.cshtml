@* Bu satır, View'a tek bir "Room" nesnesi geleceğini belirtir *@
@model HotelReservation.Models.Room

@{
    ViewData["Title"] = Model.RoomType;
}

<div class="container mt-4">

    <div class="row">
        <div class="col-lg-7 mb-4">
            <div class="card shadow-sm">
               <img src="@(string.IsNullOrWhiteSpace(Model.ImageUrl) ? "https://images.unsplash.com/photo-1582719508461-905c673771fd?q=80&w=800&auto=format&fit=crop" : Model.ImageUrl)" ... > 
              
            </div>
        </div>

       
        <div class="col-lg-5">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="card-title">@Model.RoomType</h2>
                    <hr />
                    <p class="card-text text-muted">@Model.Description</p>

                    <ul class="list-group list-group-flush my-3">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <strong>Kapasite</strong>
                            <span>@Model.Capacity Kişi</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <strong>Gecelik Fiyat</strong>
                            <span class="fs-4 text-success fw-bold">@Model.PricePerNight.ToString("C")</span>
                        </li>
                       
                    </ul>

                    @* -- REZERVASYON BUTONU -- *@
                    <div class="d-grid gap-2 mt-4">
                        <a asp-controller="Reservations" asp-action="Create" asp-route-roomId="@Model.Id" class="btn btn-success btn-lg">
                            <i class="bi bi-calendar-check"></i> Şimdi Rezervasyon Yap
                        </a>
                        <a asp-controller="Rooms" asp-action="Index" class="btn btn-secondary mt-2">
                            <i class="bi bi-arrow-left"></i> Oda Listesine Geri Dön
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@* Bootstrap ikonlarını kullanmak isterseniz _Layout.cshtml dosyanıza Bootstrap Icons CSS linkini eklemeyi unutmayın. *@