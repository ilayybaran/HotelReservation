@model HotelReservation.Models.Room
@{
    ViewData["Title"] = Model.RoomType;

    string checkInDateString = Context.Request.Query["checkInDate"];
    string checkOutDateString = Context.Request.Query["checkOutDate"];
    string guestCountString = Context.Request.Query["guestCount"];
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-7 mb-4">
            <div class="card shadow-sm">
                <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.RoomType">
            </div>
        </div>


        <div class="col-lg-5">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="card-title">@Model.RoomType</h2>
                    <hr />
                    <p class="card-text text-muted">@Model.Description</p>

                    <ul class="list-group list-group-flush my-3">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <strong>Kapasite</strong>
                            <span>@Model.Capacity Kişi</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <strong>Gecelik Fiyat</strong>
                            <span class="fs-4 fw-bold">@Model.PricePerNight.ToString("C")</span>
                        </li>
                        

                        <h5 class="mt-4">Öne Çıkan Oda Olanakları</h5>
                        <div class="row mt-3 mb-4">
                            <div class="col-md-6">
                                <ul class="list-unstyled amenity-list">
                                    <li><i class="bi bi-wifi text-primary me-2"></i>Yüksek Hızlı WiFi</li>
                                    <li><i class="bi bi-thermometer-half text-primary me-2"></i>Merkezi Klima</li>
                                    <li><i class="bi bi-tv text-primary me-2"></i>LCD TV</li>
                                    <li><i class="bi bi-telephone text-primary me-2"></i>Telefon</li>
                                    <li><i class="bi bi-cup-straw text-primary me-2"></i>Ücretsiz Minibar</li>
                                    <li><i class="bi bi-safe text-primary me-2"></i>Elektronik Kasa</li>
                                </ul>
                            </div>
                            <div class="col-md-6">
                                <ul class="list-unstyled amenity-list">
                                    <li><i class="bi bi-door-open text-primary me-2"></i>Özel Balkon</li>
                                    <li><i class="bi bi-droplet text-primary me-2"></i>Modern Duşakabin</li>
                                    <li><i class="bi bi-magic text-primary me-2"></i>Banyo Malzemeleri</li>
                                    <li><i class="bi bi-person text-primary me-2"></i>Bornoz ve Havlular</li>
                                    <li><i class="bi bi-wind text-primary me-2"></i>Saç Kurutma Makinesi</li>
                                    <li><i class="bi bi-display text-primary me-2"></i>İstek Üzerine Ütü/Masa</li>
                                </ul>
                            </div>
                        </div>
                   
                        <hr>

                    </ul>


                    <div class="d-grid gap-2 mt-4">
                        <a asp-controller="Reservations" asp-action="Create"
                           asp-route-roomId="@Model.Id"
                           asp-route-checkInDate="@checkInDateString"
                           asp-route-checkOutDate="@checkOutDateString"
                           class="btn btn-success btn-lg">
                            <i class="bi bi-calendar-check"></i> Seçili Tarihler İçin Rezerve Et
                        </a>

                        @* Geri Dönme Linki (Arama sonuçlarına) *@
                        <a asp-controller="Rooms" asp-action="Search"
                           asp-route-checkInDate="@checkInDateString"
                           asp-route-checkOutDate="@checkOutDateString"
                           asp-route-guestCount="@guestCountString"
                           class="btn btn-secondary mt-2">
                            <i class="bi bi-arrow-left"></i> Arama Sonuçlarına Geri Dön
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>