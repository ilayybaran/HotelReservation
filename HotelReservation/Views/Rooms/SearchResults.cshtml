@model IEnumerable<HotelReservation.Models.Room>
@using Microsoft.AspNetCore.Mvc.Localization
@inject HotelReservation.Services.ICurrencyService CurrencyService
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = @Localizer["SearchResultsTitle"];
}

<div class="container">
    <div class="text-center mb-4">
        <h1>@Localizer["SearchResultsTitle"]</h1>
    </div>

    <div class="row">
        @if (!Model.Any())
        {
            <div class="col">
                <div class="alert alert-warning" role="alert">
                    @Localizer["NoRoomsFound"]
                </div>
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">@Localizer["ReturnToHome"]</a>
            </div>
        }
        else
        {
            @foreach (var room in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <img src="@room.ImageUrl" class="card-img-top" alt="@room.RoomType">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@room.RoomType</h5>
                            <p class="card-text">@room.Description</p>
                            @{
                            // 1. O anki para birimini cookie'den oku (varsayılan TRY)
                            var targetCurrency = Context.Request.Cookies["UserCurrency"] ?? "TRY";

                            // 2. Fiyatı CurrencyService kullanarak dönüştür
                            var convertedPrice = await CurrencyService.ConvertFromTRYAsync(room.PricePerNight, targetCurrency);

                            // 3. Fiyatı, hedef para birimine uygun kültürle (formatla)
                            var targetCulture = CurrencyService.GetCultureInfoForCurrency(targetCurrency);
                        }
                            <ul class="list-group list-group-flush mt-auto">
                               <span class="fs-5 fw-bold text-success">@convertedPrice.ToString("C", targetCulture)</span>
                            </ul>
                            <div class="mt-3">
                                <a asp-controller="Rooms" asp-action="Details" asp-route-id="@room.Id"
                           asp-route-checkInDate="@ViewBag.CheckInDate.ToString("yyyy-MM-dd")"
                           asp-route-checkOutDate="@ViewBag.CheckOutDate.ToString("yyyy-MM-dd")"
                           asp-route-guestCount="@ViewBag.GuestCount"
                           class="btn btn-secondary">@Localizer["ViewAndBookButton"]</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>