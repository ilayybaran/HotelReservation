
@model HotelReservation.Models.PaymentViewModel
@inject HotelReservation.Services.ICurrencyService CurrencyService
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Payment"];
    var targetCulture = CurrencyService.GetCultureInfoForCurrency(Model.Currency);
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">@Localizer["ReservationSummary"]</h5>
                </div>
                <div class="card-body">
                    <h6 class="card-title">@Model.RoomType</h6>
                    <hr />
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="fs-5">@Localizer["TotalAmount"]:</span>
                        <span class="fs-4 fw-bold text-success">
                            @Model.Amount.ToString("C", targetCulture)
                        </span>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-credit-card-fill"></i> @Localizer["SecurePaymentForm"] (@Localizer["Simulation"])</h5>
                </div>
                <div class="card-body">
                    <form asp-action="ProcessPayment" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        
                        <input type="hidden" asp-for="ReservationId" />
                        <input type="hidden" asp-for="Amount" />
                        <input type="hidden" asp-for="Currency" />
                        <input type="hidden" asp-for="RoomType" />


                        <div class="mb-3">
                            <label asp-for="CardholderName" class="form-label"></label>
                            <input asp-for="CardholderName" class="form-control" placeholder="Ad Soyad" />
                            <span asp-validation-for="CardholderName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CardNumber" class="form-label"></label>
                            <input asp-for="CardNumber" class="form-control" placeholder="0000 0000 0000 0000" />
                            <span asp-validation-for="CardNumber" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">@Localizer["ExpiryDate"]</label>
                                <div class="input-group">
                                    <input asp-for="ExpiryMonth" class="form-control" placeholder="AA" />
                                    <span class="input-group-text">/</span>
                                    <input asp-for="ExpiryYear" class="form-control" placeholder="YY" />
                                </div>
                                <span asp-validation-for="ExpiryMonth" class="text-danger d-block"></span>
                                <span asp-validation-for="ExpiryYear" class="text-danger d-block"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="CVC" class="form-label"></label>
                                <input asp-for="CVC" class="form-control" placeholder="123" />
                                <span asp-validation-for="CVC" class="text-danger"></span>
                                <small class="form-text text-muted">@Localizer["CVCHint"]</small>
                            </div>
                        </div>

                        <div class="d-grid mt-3">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-lock-fill"></i> @Localizer["Pay"] @Model.Amount.ToString("C0", targetCulture)
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>