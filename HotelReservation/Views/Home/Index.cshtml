@model IEnumerable<HotelReservation.Models.Room>
@using Microsoft.AspNetCore.Mvc.Localization
@inject HotelReservation.Services.ICurrencyService CurrencyService
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["PageTitle"];
}
@section Hero {
<div class="hero-section">
    <div class="hero-overlay"></div>
    <div class="hero-background"></div>
    <div class="hero-content text-center">

        <div data-aos="fade-in">
            <h1 class="display-3 text-white fw-bold">@Localizer["WelcomeTitle"]</h1>
            <p class="lead text-white-50">@Localizer["WelcomeSub"]</p>
        </div>

        <div class="container booking-form-container-transparent mt-5" data-aos="fade-up" data-aos-delay="300">
            @if (TempData["SearchError"] != null)
            {
            <div class="alert alert-danger" role="alert">
                @TempData["SearchError"]
            </div>
            }
            <form asp-controller="Rooms" asp-action="Search" method="get">
                <div class="row g-2 align-items-center">
                    <div class="col-lg">
                        <label class="form-label">@Localizer["CheckInLabel"]</label>
                        <input type="text" class="form-control flatpickr-input " name="checkInDate" placeholder="Giriş Tarihi Seçin" required>
                    </div>
                    <div class="col-lg">
                        <label class="form-label">@Localizer["CheckOutLabel"]</label>
                        <input type="text" class="form-control flatpickr-input " name="checkOutDate" placeholder="Çıkış Tarihi Seçin" required>
                    </div>
                    <div class="col-lg-2">
                        <label class="form-label">@Localizer["GuestsLabel"]</label>
                        <select class="form-select" name="guestCount" required>
                            <option value="1" selected>1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                        </select>
                    </div>
                    <div class="col-lg-2 d-grid">
                        <label class="form-label">&nbsp;</label>
                        <button type="submit" class="btn btn-warning">@Localizer["FindRoomButton"]</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
}

<div class="container mt-5" id="featured-rooms">
    <div class="text-center mb-5">
        <h2>@Localizer["FeaturedRoomsTitle"]</h2>
        <p class="lead text-muted">@Localizer["FeaturedRoomsSub"]</p>
    </div>
    <div class="row">
        @foreach (var room in Model)
        {
            <div class="col-lg-4 mb-4" data-aos="fade-up" data-aos-delay="100">
                <div class="card h-100 shadow-sm room-card">
                    <img src="@room.ImageUrl" class="card-img-top" alt="@room.RoomType">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@room.RoomType</h5>
                        <p class="card-text text-muted">@room.Description.Substring(0, Math.Min(room.Description.Length, 100))... </p>
                        @{
                            // 1. O anki para birimini cookie'den oku (varsayılan TRY)
                            var targetCurrency = Context.Request.Cookies["UserCurrency"] ?? "TRY";

                            // 2. Fiyatı CurrencyService kullanarak dönüştür
                            var convertedPrice = await CurrencyService.ConvertFromTRYAsync(room.PricePerNight, targetCurrency);

                            // 3. Fiyatı, hedef para birimine uygun kültürle (formatla)
                            var targetCulture = CurrencyService.GetCultureInfoForCurrency(targetCurrency);
                        }
                        <div class="mt-auto pt-3">
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="fs-5 fw-bold text-success">@convertedPrice.ToString("C", targetCulture)</span>
                                <a asp-controller="Rooms" asp-action="Details" asp-route-id="@room.Id" class="btn btn-secondary">@Localizer["ViewRoomButton"]</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="container my-5 py-5 bg-light rounded">
    <div class="text-center mb-5">
        <h2>@Localizer["HotelFacilitiesTitle"]</h2>
        <p class="lead text-muted">@Localizer["HotelFacilitiesSub"]</p>
    </div>
    <div class="row text-center">
        <div class="col-md-3">
            <div class="amenity-icon mb-3">
                <i class="bi bi-water"></i>
            </div>
            <h5>@Localizer["SwimmingPool"]</h5>
            <p class="text-muted">@Localizer["SwimmingPoolDesc"]</p>
        </div>
        <div class="col-md-3">
            <div class="amenity-icon mb-3">
                <i class="bi bi-cup-hot"></i>
            </div>
            <h5>@Localizer["RestaurantBar"]</h5>
            <p class="text-muted">@Localizer["RestaurantBarDesc"]</p>
        </div>
        <div class="col-md-3">
            <div class="amenity-icon mb-3">
                <i class="bi bi-heart-pulse"></i>
            </div>
            <h5>@Localizer["SpaWelness"]</h5>
            <p class="text-muted">@Localizer["SpaWelnessDesc"]</p>
        </div>
        <div class="col-md-3">
            <div class="amenity-icon mb-3">
                <i class="bi bi-wifi"></i>
            </div>
            <h5>@Localizer["FreeWiFi"]</h5>
            <p class="text-muted">@Localizer["FreeWiFiDesc"]</p>
        </div>
    </div>
</div>
 @await Html.PartialAsync("Brands")