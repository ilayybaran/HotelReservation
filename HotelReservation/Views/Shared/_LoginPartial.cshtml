@using Microsoft.AspNetCore.Identity
@using HotelReservation.Models
@using Microsoft.AspNetCore.Mvc.Localization 
@inject IViewLocalizer Localizer
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">

    @if (SignInManager.IsSignedIn(User))
    {
        // Önce o an giriş yapmış kullanıcının tüm bilgilerini alıyoruz
        var user = await UserManager.GetUserAsync(User);

        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="@Localizer["ManageAccountTitle", user.FullName]">
                <i class="bi bi-person-circle fs-5"></i>
            </a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0" title="@Localizer["Logout"]">
                    <i class="bi bi-box-arrow-right fs-5"></i>
                </button>
            </form>
        </li>
    }

    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">@Localizer["Register"]</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">@Localizer["Login"]</a>
        </li>
    }

</ul>