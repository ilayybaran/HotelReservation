<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HotelReservation</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;700&family=Playfair+Display:wght@700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <link rel="stylesheet" href="~/HotelReservation.styles.css" asp-append-version="true" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick-theme.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.min.js"></script>

</head>
<body>
    @using Microsoft.AspNetCore.Mvc.Localization
    @inject IViewLocalizer Localizer
    @using Microsoft.AspNetCore.Identity
    @using HotelReservation.Models
    @inject SignInManager<ApplicationUser> SignInManager
    @using Microsoft.AspNetCore.Builder
    @using Microsoft.AspNetCore.Localization
    @using Microsoft.Extensions.Options
    @inject IOptions<RequestLocalizationOptions> LocOptions
    @{
        var requestCulture = Context.Features.Get<IRequestCultureFeature>();
        var currentPathAndQuery = Context.Request.Path + Context.Request.QueryString;
        var cultureItems = LocOptions.Value.SupportedUICultures
        .Select(c => new SelectListItem { Value = c.Name, Text = c.NativeName.Split(' ')[0].ToUpperInvariant() })
        .ToList();
        var currentCultureName = cultureItems.FirstOrDefault(c => c.Value == requestCulture.RequestCulture.UICulture.Name)?.Text ?? requestCulture.RequestCulture.UICulture.Name;


        var supportedCurrencies = new List<SelectListItem> {
    new SelectListItem { Value = "TRY", Text = "TRY" },
    new SelectListItem { Value = "USD", Text = "USD" },
    new SelectListItem { Value = "EUR", Text = "EUR" }
    };
        var currentCurrency = Context.Request.Cookies["UserCurrency"] ?? "TRY"; // Default to TRY if cookie not found
        var currentCurrencyItem = supportedCurrencies.FirstOrDefault(c => c.Value == currentCurrency);
        var currentCurrencyText = currentCurrencyItem?.Text ?? currentCurrency;
    }



    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <div class="dropdown">
                    <button class="btn btn-outline-none d-flex align-items-center" type="button" id="menuDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-list fs-5"></i> <!-- Menü ikonu -->
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="menuDropdown">
                        <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Index">@Localizer["HomePage"]</a></li>
                        <li><a class="dropdown-item" asp-area="" asp-controller="Rooms" asp-action="Index">@Localizer["Rooms"]</a></li>

                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" asp-area="" asp-controller="Reservations" asp-action="ResList">@Localizer["MyReservations"]</a></li>
                        }

                        @if (User.IsInRole("Admin"))
                        {
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item text-danger fw-bold" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                                    <i class="bi bi-shield-lock"></i>@Localizer["AdminPanel"]
                                </a>
                            </li>
                        }
                    </ul>
                </div>

                <div class="dropdown me-3">
                    <button class="btn btn-outline-none btn-sm px-2 py-1 dropdown-toggle"
                            type="button" id="languageDropdown"
                            data-bs-toggle="dropdown" aria-expanded="false"
                            style="font-size: 0.85rem; margin-left: 10px ">
                        🌐 @requestCulture.RequestCulture.UICulture.TwoLetterISOLanguageName.ToUpper()
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="languageDropdown" style="min-width: 60px; text-align:center;">
                        @foreach (var culture in cultureItems)
                        {
                            <li>
                                <form asp-controller="Home" asp-action="SetLanguage"
                                  asp-route-returnUrl="@Context.Request.Path" method="post"
                                  class="d-inline">
                                    <input type="hidden" name="culture" value="@culture.Value" />
                                    <button type="submit" class="dropdown-item @(culture.Value == requestCulture.RequestCulture.UICulture.Name ? "active" : "")"
                                        style="font-size: 0.8rem;">
                                        @culture.Value.Split('-')[0].ToUpper()

                                    </button>
                                </form>
                            </li>
                        }
                    </ul>
                </div>



                <div class="dropdown me-lg-2 mt-2 mt-lg-0 order-lg-1">
                    <button class="btn btn-outline-none btn-sm px-2 py-1 dropdown-toggle d-flex align-items-center"
                            type="button" id="currencyDropdown"
                            data-bs-toggle="dropdown" aria-expanded="false"
                            style="font-size: 0.85rem;">
                        <i class="bi bi-currency-exchange me-1"></i> @currentCurrencyText
                    </button>

                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="currencyDropdown" style="min-width: 60px; text-align:center;">
                        @foreach (var currency in supportedCurrencies)
                        {
                            <li>
                                <form asp-controller="Home" asp-action="SetCurrency"
                                  asp-route-returnUrl="@currentPathAndQuery" method="post"
                                  class="d-inline">
                                    <input type="hidden" name="currencyCode" value="@currency.Value" />

                                    <button type="submit" class="dropdown-item @(currency.Value == currentCurrency ? "active" : "")"
                                        style="font-size: 0.8rem;">
                                        @currency.Text
                                    </button>
                                </form>
                            </li>
                        }
                    </ul>
                </div>

                <a class="navbar-brand order-lg-1 mx-lg-auto" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/hotelLogo.png" alt="HotelReservation Logosu" class="navbar-logo">
                </a>

                <div class="d-flex align-items-center gap-3">
                    <partial name="_LoginPartial" />
                </div>
            </div>

        </nav>
    </header>

    @RenderSection("Hero", required: false)

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="site-footer border-top mt-5">
        <div class="container">
            <div class="row">

                <div class="col-md-6">
                    <h6>@Localizer["Contact"]</h6>
                    <ul class="footer-links">
                        <li><i class="bi bi-geo-alt-fill me-2"></i>Örnek Mah. Atatürk Cad. No:123, Antalya, Türkiye</li>
                        <li><i class="bi bi-telephone-fill me-2"></i>+90 242 000 00 00</li>
                        <li><i class="bi bi-envelope-fill me-2"></i>info@hotelreservation.com</li>
                    </ul>
                </div>

                <div class="col-md-6">
                    <h6>@Localizer["FollowUs"]</h6>
                    <p class="text-muted">@Localizer["FollowUsText"]</p>
                    <div class="social-icons">
                        <a href="#"><i class="bi bi-facebook"></i></a>
                        <a href="#"><i class="bi bi-instagram"></i></a>
                        <a href="#"><i class="bi bi-twitter"></i></a>
                        <a href="#"><i class="bi bi-youtube"></i></a>
                    </div>
                </div>

            </div>
            <hr class="my-4">
            <div class="row">
                <div class="col text-center">
                    <p class="copyright-text">@Localizer["CopyrightNotice", DateTime.Now.Year]</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://npmcdn.com/flatpickr/dist/l10n/tr.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
