<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HotelReservation</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;700&family=Playfair+Display:wght@700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <link rel="stylesheet" href="~/HotelReservation.styles.css" asp-append-version="true" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick-theme.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.min.js"></script>

</head>
<body>
    @using Microsoft.AspNetCore.Identity
    @using HotelReservation.Models
    @inject SignInManager<ApplicationUser> SignInManager

    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <div class="dropdown">
                    <button class="btn btn-outline-secondary d-flex align-items-center" type="button" id="menuDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-list fs-6"></i> <!-- Menü ikonu -->
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="menuDropdown">
                        <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Index">Ana Sayfa</a></li>
                        <li><a class="dropdown-item" asp-area="" asp-controller="Rooms" asp-action="Index">Odalar</a></li>

                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" asp-area="" asp-controller="Reservations" asp-action="ResList">Rezervasyonlarım</a></li>
                        }

                        @if (User.IsInRole("Admin"))
                        {
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item text-danger fw-bold" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                                    <i class="bi bi-shield-lock"></i> Admin Paneli
                                </a>
                            </li>
                        }
                    </ul>
                </div>

                <a class="navbar-brand mx-auto fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    HotelReservation
                </a>
                <partial name="_LoginPartial" />
            </div>

        </nav>
    </header>

    @* <div class="main-content-pusher"></div> *@

    @RenderSection("Hero", required: false)

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="site-footer border-top mt-5">
        <div class="container">
            <div class="row">

                <div class="col-md-6">
                    <h6>İletişim</h6>
                    <ul class="footer-links">
                        <li><i class="bi bi-geo-alt-fill me-2"></i>Örnek Mah. Atatürk Cad. No:123, Antalya, Türkiye</li>
                        <li><i class="bi bi-telephone-fill me-2"></i>+90 242 000 00 00</li>
                        <li><i class="bi bi-envelope-fill me-2"></i>info@hotelreservation.com</li>
                    </ul>
                </div>

                <div class="col-md-6">
                    <h6>Bizi Takip Edin</h6>
                    <p class="text-muted">En yeni teklifler ve haberler için sosyal medya hesaplarımızı takip edin.</p>
                    <div class="social-icons">
                        <a href="#"><i class="bi bi-facebook"></i></a>
                        <a href="#"><i class="bi bi-instagram"></i></a>
                        <a href="#"><i class="bi bi-twitter"></i></a>
                        <a href="#"><i class="bi bi-youtube"></i></a>
                    </div>
                </div>

            </div>
            <hr class="my-4">
            <div class="row">
                <div class="col text-center">
                    <p class="copyright-text">&copy; @DateTime.Now.Year - HotelReservation. Tüm Hakları Saklıdır.</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://npmcdn.com/flatpickr/dist/l10n/tr.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
