@model HotelReservation.Models.Review
@{
    ViewData["Title"] = "Yorum Yap";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h4>@ViewData["Title"]: @Model.Room.RoomType</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        
                        <input type="hidden" asp-for="RoomId" />
                        <input type="hidden" asp-for="ReservationId" />
                        
                        <div class="mb-3">
                            <label asp-for="Rating" class="form-label fw-bold">Puanınız (1-5)</label>
                            <select asp-for="Rating" class="form-select">
                                <option value="">Puan Seçin...</option>
                                <option value="5">5 ★★★★★ </option>
                                <option value="4">4 ★★★★☆ </option>
                                <option value="3">3 ★★★☆☆ </option>
                                <option value="2">2 ★★☆☆☆ </option>
                                <option value="1">1 ★☆☆☆☆ </option>
                            </select>
                            <span asp-validation-for="Rating" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Comment" class="form-label fw-bold">Yorumunuz (Opsiyonel)</label>
                            <textarea asp-for="Comment" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="Comment" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success">Yorumu Gönder</button>
                            <a asp-controller="Reservations" asp-action="ResList" class="btn btn-secondary">
                                Rezervasyonlarıma Geri Dön
                            </a>
                        </div>
                    </form>
    
                </div>
            </div>
        </div>
    </div>
</div>