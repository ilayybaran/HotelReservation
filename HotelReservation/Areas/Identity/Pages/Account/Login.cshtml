@page
@model LoginModel

@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <section>
            <div class="card shadow-sm">
                <div class="card-body">
                    <h1 class="card-title text-center mb-4">@ViewData["Title"]</h1>
                    <h4 class="mb-3">Hesabınıza giriş yapın.</h4>
                    <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <form id="account" method="post">
                        <input type="hidden" asp-for="ReturnUrl" value="@Model.ReturnUrl" />

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="form-label">E-posta</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password" class="form-label">Şifre</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        
                        <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <label class="form-check-label" asp-for="Input.RememberMe">
                                Beni Hatırla
                            </label>
                        </div>
                        
                        <div class="d-grid">
                            <button id="login-submit" type="submit" class="btn btn-primary btn-lg">Giriş Yap</button>
                        </div>

                       @* <div class="mt-3 text-center">
                            <p>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Hesabın yok mu? Kayıt Ol</a>
                            </p>
                        </div>*@
                    </form>
                </div>
            </div>
        </section>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}