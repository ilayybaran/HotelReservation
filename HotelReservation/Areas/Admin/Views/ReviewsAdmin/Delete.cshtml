@model HotelReservation.Models.Review

@{
    ViewData["Title"] = "Yorumu Sil";
}

<h1>Yorumu Sil</h1>
<h3 class="text-danger">Bu yorumu kalıcı olarak silmek istediğinizden emin misiniz?</h3>
<br />

<div class="card bg-light border-danger">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">Kullanıcı</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.User.FullName)</dd>
            
            <dt class="col-sm-2">Oda</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Room.RoomType)</dd>
            
            <dt class="col-sm-2">Puan</dt>
            <dd class="col-sm-10 text-warning">
                @for (int i = 1; i <= Model.Rating; i++) { <i class="bi bi-star-fill"></i> }
            </dd>

            <dt class="col-sm-2">Yorum</dt>
            <dd class="col-sm-10 fst-italic">"@Html.DisplayFor(model => model.Comment)"</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Evet, Sil" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">İptal et ve Listeye Geri Dön</a>
</form>