@model IEnumerable<HotelReservation.Models.Review>

@{
    ViewData["Title"] = "Yorum Yönetimi";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Yorum Yönetimi</h2>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card shadow-sm">
    <div class="card-body">
        <table class="table table-hover align-middle">
            <thead>
                <tr>
                    <th>Oda</th>
                    <th>Kullanıcı</th>
                    <th>Puan</th>
                    <th>Yorum</th>
                    <th>Tarih</th>
                    <th style="width: 10%;" class="text-end">İşlemler</th>
                </tr>
            </thead>
            <tbody>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @if (item.Room != null)
                {
                    @Html.DisplayFor(modelItem => item.Room.RoomType)
                }
                else
                {
                    <span class="text-danger fst-italic">[Silinmiş Oda]</span>
                }
            </td>
            <td>
                @if (item.User != null)
                {
                    @Html.DisplayFor(modelItem => item.User.FullName)
                }
                else
                {
                    <span class="text-danger fst-italic">[Silinmiş Kullanıcı]</span>
                }
            </td>
            <td>
                <span class="text-warning">
                    @for (int i = 1; i <= item.Rating; i++) { <i class="bi bi-star-fill"></i> }
                    @for (int i = item.Rating + 1; i <= 5; i++) { <i class="bi bi-star"></i> }
                </span>
            </td>
            <td>
                @if (!string.IsNullOrEmpty(item.Comment))
                {
                    <span>@(item.Comment.Length > 100 ? item.Comment.Substring(0, 100) + "..." : item.Comment)</span>
                }
                else
                {
                    <span class="text-muted fst-italic">[Yorum Yok]</span>
                }
            </td>
            <td>
                @item.DatePosted.ToShortDateString()
            </td>
            <td class="text-end">
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" title="Sil">
                    <i class="bi bi-trash-fill"></i>
                </a>
            </td>
        </tr>
    }

            </tbody>
        </table>
    </div>
</div>