@model IEnumerable<HotelReservation.Models.Amenity>

@{
    ViewData["Title"] = "Olanak Yönetimi";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Olanak Yönetimi</h2>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle-fill me-2"></i>Yeni Olanak Ekle
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card shadow-sm">
    <div class="card-body">
        <table class="table table-hover align-middle">
            <thead>
                <tr>
                    <th style="width: 10%;">İkon</th>
                    <th>Olanak Adı (TR)</th>
                    <th style="width: 20%;" class="text-end">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <i class="@item.IconClass fs-4 text-primary"></i>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm" title="Düzenle">
                                <i class="bi bi-pencil-fill"></i>
                            </a>
                            </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>