@{
    ViewData["Title"] = "Yeni Olanak Ekle";
}

<h2 class="mb-4">Yeni Olanak Ekle</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

    <div class="mb-3">
        <label for="IconClass" class="form-label">İkon Sınıfı </label>
        <input name="IconClass" class="form-control" />
    </div>
    
    <hr />

    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="tr-tab" data-bs-toggle="tab" data-bs-target="#tr-content" type="button" role="tab" aria-selected="true">Türkçe (TR)</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="en-tab" data-bs-toggle="tab" data-bs-target="#en-content" type="button" role="tab" aria-selected="false">English (EN)</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="de-tab" data-bs-toggle="tab" data-bs-target="#de-content" type="button" role="tab" aria-selected="false">Deutsch (DE)</button>
        </li>
    </ul>
    <div class="tab-content" id="myTabContent">
        
        <div class="tab-pane fade show active" id="tr-content" role="tabpanel" aria-labelledby="tr-tab">
            <div class="mb-3 mt-3">
                <label for="Name_tr" class="form-label">Olanak Adı (TR)</label>
                <input name="Name_tr" class="form-control" />
            </div>
        </div>
        
        <div class="tab-pane fade" id="en-content" role="tabpanel" aria-labelledby="en-tab">
            <div class="mb-3 mt-3">
                <label for="Name_en" class="form-label">Olanak Adı (EN)</label>
                <input name="Name_en" class="form-control" />
            </div>
        </div>
        <div class="tab-pane fade" id="de-content" role="tabpanel" aria-labelledby="de-tab">
            <div class="mb-3 mt-3">
                <label for="Name_de" class="form-label">Olanak Adı (DE)</label>
                <input name="Name_de" class="form-control" />
            </div>
        </div>
    </div>

    <hr />

    <div class="d-grid gap-2">
        <button type="submit" class="btn btn-success">
            <i class="bi bi-save"></i> Olanak Kaydet
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Listeye Geri Dön
        </a>
    </div>
</form>