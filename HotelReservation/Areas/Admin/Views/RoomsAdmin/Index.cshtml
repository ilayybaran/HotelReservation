@model IEnumerable<HotelReservation.Models.Room>

@{
    ViewData["Title"] = "Oda Yönetimi";
}

<h1>Oda Yönetimi</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Oda Ekle</a>
</p>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Oda Tipi</th>
            <th>Kapasite</th>
            <th>Fiyat/Gece</th>
            <th>Müsait mi?</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RoomType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
            <td>
                @item.PricePerNight.ToString("C")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsAvailable)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Düzenle</a> 
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Detaylar</a> 
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>