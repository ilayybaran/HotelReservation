@model HotelReservation.Models.Room

@{
    ViewData["Title"] = "Oda Detayları";
}

<h1>Oda Detayları</h1>
<div>
    <hr/>
     <dl class="row">
        <dt class="col-sm-2">Oda Tipi</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.RoomType)</dd>
        
        <dt class="col-sm-2">Açıklama</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>
        
        <dt class="col-sm-2">Kapasite</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Capacity)</dd>
        
        <dt class="col-sm-2">Fiyat/Gece</dt>
        <dd class="col-sm-10">@Model.PricePerNight.ToString("C")</dd>
        
        <dt class="col-sm-2">Resim URL</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.ImageUrl)</dd>
        
        <dt class="col-sm-2">Müsait mi?</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.IsAvailable)</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp_route_id="@Model.Id" class="btn-primary btn-primary">Düzenle</a>
    <a asp-action="Index">Listeye Geri Dön</a>
</div>

