@model HotelReservation.Models.Room

@{
    ViewData["Title"] = "Odayı Sil";
}

<h1>Odayı Sil</h1>

<h3 class="text-danger">Bu odayı silmek istediğinizden emin misiniz?</h3>
<div>
    <h4>Oda Bilgileri</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Oda Tipi</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.RoomType)</dd>
        
        <dt class = "col-sm-2">Fiyat</dt>
        <dd class = "col-sm-10">@Model.PricePerNight.ToString("C")</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="Index">Listeye Geri Dön</a>
    </form>
</div>