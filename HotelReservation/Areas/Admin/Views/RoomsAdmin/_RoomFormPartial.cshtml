@model HotelReservation.Models.Room

@{
    var allAmenities = ViewBag.AllAmenities as List<HotelReservation.Models.Amenity> ?? new List<HotelReservation.Models.Amenity>();

    // Edit modunda, odanın mevcut olanaklarının ID'lerini bir sete al (daha hızlı kontrol için)
    var selectedAmenityIds = new HashSet<int>(Model.Amenities?.Select(a => a.Id) ?? Enumerable.Empty<int>());

    var transTR = Model.Translations?.FirstOrDefault(t => t.LanguageCode == "tr-TR");
    var transEN = Model.Translations?.FirstOrDefault(t => t.LanguageCode == "en-US");
    var transDE = Model.Translations?.FirstOrDefault(t => t.LanguageCode == "de-DE");
}
<div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="card mb-3">
        <div class="card-header">
            <strong>Türkçe (Varsayılan)</strong>
        </div>
        <div class="card-body">
            <input type="hidden" name="Translations[0].RoomId" value="@Model.Id" />
            <input type="hidden" name="Translations[0].LanguageCode" value="tr-TR" />

            <div class="form-group mb-2">
                <label class="control-label">Oda Tipi (TR)</label>
                <input name="Translations[0].RoomType" class="form-control" value="@transTR?.RoomType" />
            </div>
            <div class="form-group mb-2">
                <label class="control-label">Açıklama (TR)</label>
                <textarea name="Translations[0].Description" class="form-control" rows="3">@transTR?.Description</textarea>
            </div>
        </div>
    </div>

    <div class="card mb-3">
        <div class="card-header">
            <strong>İngilizce</strong>
        </div>
        <div class="card-body">
            <input type="hidden" name="Translations[1].RoomId" value="@Model.Id" />
            <input type="hidden" name="Translations[1].LanguageCode" value="en-US" />

            <div class="form-group mb-2">
                <label class="control-label">Room Type (EN)</label>
                <input name="Translations[1].RoomType" class="form-control" value="@transEN?.RoomType" />
            </div>
            <div class="form-group mb-2">
                <label class="control-label">Description (EN)</label>
                <textarea name="Translations[1].Description" class="form-control" rows="3">@transEN?.Description</textarea>
            </div>
        </div>
    </div>

    <div class="card mb-3">
        <div class="card-header">
            <strong>Almanca</strong>
        </div>
        <div class="card-body">
            <input type="hidden" name="Translations[2].RoomId" value="@Model.Id" />
            <input type="hidden" name="Translations[2].LanguageCode" value="de-DE" />

            <div class="form-group mb-2">
                <label class="control-label">Zimmertyp (DE)</label>
                <input name="Translations[2].RoomType" class="form-control" value="@transDE?.RoomType" />
            </div>
            <div class="form-group mb-2">
                <label class="control-label">Beschreibung (DE)</label>
                <textarea name="Translations[2].Description" class="form-control" rows="3">@transDE?.Description</textarea>
            </div>
        </div>
    </div>

    <div classs="form-group mb-3">
        <label class="control-label fw-bold">Oda Olanakları</label>
        <div class="row mt-2" style="max-height: 250px; overflow-y: auto; border: 1px solid #ddd; padding: 10px; border-radius: 5px;">
            @if (!allAmenities.Any())
            {
                <p class="text-muted">Hiç olanak bulunamadı. Lütfen önce veritabanına olanak ekleyin.</p>
            }
            @foreach (var amenity in allAmenities)
            {
                <div class="col-md-6">
                    <div class="form-check">
                        <input class="form-check-input"
                           type="checkbox"
                           name="selectedAmenityIds"
                           value="@amenity.Id"
                           id="amenity_@amenity.Id"
                           @(selectedAmenityIds.Contains(amenity.Id) ? "checked" : "") /> @* Edit için işaretli getirir *@
                        <label class="form-check-label" for="amenity_@amenity.Id">
                            <i class="@amenity.IconClass me-1 text-primary"></i> @amenity.Name
                        </label>
                    </div>
                </div>
            }
        </div>
    </div>


    <div class="form-group mb-2">
        <label asp-for="Capacity" class="control-label"></label>
        <input asp-for="Capacity" type="number" class="form-control" />
        <span asp-validation-for="Capacity" class="text-danger"></span>
    </div>
    <div class="form-group mb-2">
        <label asp-for="PricePerNight" class="control-label"></label>
        @using System.Globalization

        <input asp-for="PricePerNight"
               class="form-control"
               type="number"
               step="any"
               value="@Model.PricePerNight.ToString(CultureInfo.InvariantCulture)" />
        <span asp-validation-for="PricePerNight" class="text-danger"></span>
    </div>
    <div class="form-group mb-2">
        <label for="ImageFile" class="control-label">Oda Resmi</label>
        @if (Model != null && !string.IsNullOrEmpty(Model.ImageUrl))
        {
            <div class="mt-2 mb-2">
                <img src="@Model.ImageUrl" alt="Mevcut Resim" style="max-width: 200px; height: auto; border-radius: 5px;" />
                <small class="d-block text-muted mt-1">Mevcut resim. Değiştirmek için yeni bir resim seçin.</small>
            </div>
        }
        <input name="ImageFile" type="file" class="form-control" accept="image/*" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>
    <div class="form-group form-check mt-3">
        <label class="form-check-label">
            <input class="form-check-input" asp-for="IsAvailable" /> @Html.DisplayNameFor(model => model.IsAvailable)
        </label>
    </div>

